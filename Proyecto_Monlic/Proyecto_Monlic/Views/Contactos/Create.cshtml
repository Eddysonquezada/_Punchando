

<div class="slides">

    <div class="slide" id="2">

        <div class="content first-content" style=" width: 950px; padding-top: 0;">

            <div class="col-md-10 col-md-offset-2">
                @model Proyecto_Monlic.Models.Contactos

                @{
                    ViewBag.Title = "Crear Contacto";
                    Layout = "~/Views/Shared/_Layout.cshtml";
                }
                @Html.Partial("_Navegation")


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    <h2>Nuevo Contacto</h2>
                    <div class="form-horizontal" style=" color: white; font-family: fantasy;">

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdTipoD, "Tipo de Documento*", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("IdTipoD", null,"---Seleccione tipo de documento---", htmlAttributes: new { @class = "form-control",  @required = "required" })
                                @Html.ValidationMessageFor(model => model.IdTipoD, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Documento, "Número Documento*", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Documento, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Documento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Contacto, "Nombre Completo*", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Contacto, new { htmlAttributes = new { @class = "form-control", @MaxLength = "45", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Contacto, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Telefono, "Teléfono", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IdCiudad, "Ciudad*", htmlAttributes: new { @class = "control-label col-md-2", @required = "required" })
                            <div class="col-md-10">
                                @Html.DropDownList("IdCiudad", null,"--- Seleccione una cuidad ---", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdCiudad, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Agregar" class="btn btn-info" />
                                <a class="btn btn-default" @Html.ActionLink("Volver", "Index")
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@section scripts {
    @Html.Raw("<script>" + ViewBag.alerta + "</script>")
}
