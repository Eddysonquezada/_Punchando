<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">

@Html.Partial("_Navegation")

<div class="col-md-7 col-md-offset-4 ">
    @model IEnumerable<Proyecto_Monlic.Models.MovimientoESA>
    @{
        ViewBag.Title = "Movimientos";
    }


    <br /><br /><br /><br />
    <p>
        <a class="btn btn-info" @Html.ActionLink("Nuevo Movimiento", "Create")
    </p>
    <div class="card mb-3">
        <div class="card-header">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped " id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>


                                <th>
                                    @Html.DisplayNameFor(model => model.Materiales.Material)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cantidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Precio)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Fecha)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Contactos.Contacto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TiposMovimientos.Movimiento)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Estado)
                                </th>*@

                                <th>Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                
                                <td>
                                    <font size="3">   @Html.DisplayFor(modelItem => item.Materiales.Material) </font>
                                </td>
                                <td>
                                    <font size="3">  @Html.DisplayFor(modelItem => item.Cantidad) </font>
                                </td>
                                <td>
                                    <font size="3">   @Html.DisplayFor(modelItem => item.Precio) </font>
                                </td>
                                <td>
                                    <font size="3">   @Html.DisplayFor(modelItem => item.Fecha) </font>
                                </td>
                                <td>
                                    <font size="3">   @Html.DisplayFor(modelItem => item.Contactos.Contacto) </font>
                                </td>
                                <td>
                                    <font size="3">   @Html.DisplayFor(modelItem => item.TiposMovimientos.Movimiento) </font>
                                </td>
                                @*<td>
                                     <font size="3">  @Html.DisplayFor(modelItem => item.Estado) </font>
                                 </td>*@
                                <td>
                                    <form method="post" action='@Url.Action("Estado", "MovimientoESAs",new { id = item.IdMovimientoESA })'>
                                        <input type="submit" value="Estado" class="btn btn-danger" onclick="cam()" />
                                        @Html.ActionLink("Editar", "Edit", new { id = item.IdMovimientoESA }, new { @class = "btn btn-success" })


                                        @Html.AntiForgeryToken()
                                    </form>
                                </td>
                            </tr>
                            }


                        <tbody>
                    </table>


                </div>
            </div>
            <script>
                function cam() {

                    swal("Esta seguro de que desea cambiar de estado");
                }

            </script>


        </div>
    </div>
</div>