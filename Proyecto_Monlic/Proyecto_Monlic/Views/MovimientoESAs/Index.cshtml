<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">

@Html.Partial("_Navegation")

<div class="col-md-7 col-md-offset-4 ">
    @model IEnumerable<Proyecto_Monlic.Models.MovimientoESA>
    @{
        ViewBag.Title = "Movimientos";
    }


    <br /><br /><br /><br />
    <p>
        <a class="btn btn-info" @Html.ActionLink("Nuevo Movimiento", "Create")></a>
    </p>
    <div class="card mb-3">
        <div class="card-header">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="scroller">
                        <table class="table table-striped " id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>



                                    @*<th>
                                        No.Factura
                                    </th>*@
                                    <th>
                                        Fecha
                                    </th>
                                    <th>
                                        Cliente
                                    </th>
                                    <th>
                                        Tipo Movimiento
                                    </th>
                                    @*<th>
                                        Sub Total
                                    </th>
                                    <th>Cargos</th>
                                    <th>Descuentos</th>*@
                                    <th>Total</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null && Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr style="font-size: large">

                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.IdMovimientoESA)
                                            </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Contactos.Contacto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TiposMovimientos.Movimiento)

                                            </td>
                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.SubTotalGeneral)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CargosGenerales)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DescuentosGenerales)
                                            </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalGeneral)
                                            </td>
                                            <td>

                                                @Html.ActionLink("Detalle de Factura", "Details", new { id = item.IdMovimientoESA }, new { @class = "btn btn-success" })

                                                <form method="post" action='@Url.Action("Estado", "MovimientoESAs", new {id = item.IdMovimientoESA})'>
                                                    <input type="submit" value="Estado" class="btn btn-danger" onclick="cam()" />
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdMovimientoESA }, new { @class = "btn btn-warning" })


                                                    @Html.AntiForgeryToken()
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }

                            <tbody>
                        </table>

                    </div>
                </div>
            </div>
            <script>
                function cam() {

                    swal("Esta seguro de que desea cambiar de estado");
                }

            </script>


        </div>
    </div>
</div>